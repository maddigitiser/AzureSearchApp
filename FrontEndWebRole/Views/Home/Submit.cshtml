@model FrontEndWebRole.Models.SubmitFileViewModel

@{
    ViewBag.Title = "Submit";
}

<h2>Submit</h2>
<h2>@ViewBag.Message</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubmitFileViewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FileName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FileName)
            @Html.ValidationMessageFor(model => model.FileName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FileContents)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FileContents)
            @Html.ValidationMessageFor(model => model.FileContents)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
